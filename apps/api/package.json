{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./contracts/*": "./src/contracts/*.ts",
    "./routes_web/*/*/contract": "./src/routes_web/*/*/contract.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "start": "node -r esbuild-register ./src/index.ts",
    "test": "jest --detectOpenHandles",
    "db:migrate": "kysely migrate:latest",
    "db:types": "node -r esbuild-register src/scripts/generate_types.ts",
    "db:migrate:types": "kysely migrate & db:types",
    "db:migrate:down": "kysely migrate:down",
    "db:migrate:create": "kysely migrate:make",
    "webhook:listen": "svix listen http://localhost:${PORT:-3030}/webhook/clerk"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@clerk/express": "1.7.54",
    "@repo/logger": "workspace:*",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "kysely": "0.28.8",
    "morgan": "^1.10.0",
    "pg": "8.16.3",
    "pino-http": "11.0.0",
    "svix": "1.82.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/metrics": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/pg": "8.15.6",
    "@types/supertest": "^6.0.2",
    "commander": "14.0.2",
    "dotenv": "16.4.7",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "kysely-codegen": "0.19.0",
    "kysely-ctl": "0.19.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3",
    "typescript": "5.5.4"
  }
}